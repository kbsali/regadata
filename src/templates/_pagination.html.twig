{% if p.prev is not null %}
    {% set meta_page_prev = '<link rel="prev" href="' ~ url('report', {id: p.prev}) ~ '">' %}
{% endif %}

{% if p.next is not null %}
    {% set meta_page_next = '<link rel="next" href="' ~ url('report', {id: p.next}) ~ '">' %}
{% endif %}

{% set params = {} %}
{% if mode != false %}
    {% set params = params|merge({'mode': mode }) %}
{% endif %}
{% if full_screen %}
    {% set params = params|merge({'fs': 1 }) %}
{% endif %}
            <div class="text-center">
                <ul class="pagination">
                    <li class="previous{{ p.prev is null ? ' disabled' : '' }}">
                        <a href="{{ p.prev is null ? '' : path('report', {id: p.first}) }}?{{ params|url_encode }}">&lt;&lt;</a>
                    </li>
                    <li class="previous{{ p.prev is null ? ' disabled' : '' }}">
                        <a href="{{ p.prev is null ? '/' : path('report', {id: p.prev}) }}?{{ params|url_encode }}">&lt;</a>
                    </li>

                    <li class="disabled">
                        <a href="?{{ params|url_encode }}">{{ 'Ranking %x% of %y%'|trans({'%x%': p.current, '%y%': p.total }) }}</a>
                    </li>

                    <li class="next{{ p.next is null ? ' disabled' : '' }}">
                        <a href="{{ p.next is null ? '' : path('report', {id: p.next}) }}?{{ params|url_encode }}">&gt;</a>
                    </li>
                    <li class="next{{ p.next is null ? ' disabled' : '' }}">
                        <a href="{{ p.next is null ? '' : path('report', {id: 'latest'}) }}?{{ params|url_encode }}">&gt;&gt;</a>
                    </li>
                </ul>
            </div>
